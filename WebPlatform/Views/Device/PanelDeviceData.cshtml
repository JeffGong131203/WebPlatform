                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <h3>设置温度</h3>
                            <p>
                                <select name="SEL_SetTmp" class="form-control select2" style="width:200px">
                                    @for (int i = 5; i <= 35; i++)
                                    {
                                        if (string.IsNullOrEmpty(setTmp))
                                        {
                                            <option value="@i">@i</option>
                                        }
                                        else

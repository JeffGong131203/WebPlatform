
@{
    ViewBag.Title = "我的门店";
    Layout = "~/Views/Shared/_Layout.cshtml";

    IEnumerable<WebPlatform.Models.Portal_Customer_Store> storeList = ViewBag.storeList;
    Guid cusID = ViewBag.cusID;
}


<div class="row">
    <div class="col-md-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body text-center">
                <div class="row">
                    @foreach (WebPlatform.Models.Portal_Customer_Store s in storeList.ToList())
                    {
                            <div class="col-md-4">
                                <div class="small-box bg-aqua">
                                    <div class="inner">
                                        <h3>@s.StoreName</h3>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-ios-home"></i>
                                    </div>
                                    <a href="@Url.Action("StoreDeviceSet", "Home", new { storeID = s.ID,cusID=cusID })" class="small-box-footer">设备管理 <i class="fa fa-arrow-circle-right"></i></a>
                                    <a href="@Url.Action("DeviceDataView", "Home", new { storeID = s.ID,cusID=cusID })" class="small-box-footer">查看数据 <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
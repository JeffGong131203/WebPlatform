
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>云平台</b>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登录后开始体验</p>
            <form action="@Url.Action("Login","Home")" method="post">
                <div class="form-group has-feedback">
                    <input name="loginno" type="text" class="form-control" placeholder="账号">
                    <span class="glyphicon glyphicon-cloud form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="loginpsw" type="password" class="form-control" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> 记住我
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>@ViewBag.errMsg</p>

            </div>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>


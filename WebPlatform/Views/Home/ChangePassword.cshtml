
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>密码修改</b>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg"></p>
            <form action="@Url.Action("ChangePassword","Home")" method="post">
                <div class="form-group has-feedback">
                    <input name="oldpsw" type="password" class="form-control" placeholder="原密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="newpsw1" type="password" class="form-control" placeholder="新密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="newpsw2" type="password" class="form-control" placeholder="重复新密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        @*<div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> 记住我
                            </label>
                        </div>*@
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">确定修改</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>@ViewBag.errMsg</p>

            </div>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

</body>


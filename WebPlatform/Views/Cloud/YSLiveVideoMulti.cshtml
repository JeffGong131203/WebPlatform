
@{
    ViewBag.Title = "萤石摄像头分屏监控";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int splitNum = ViewBag.splitNum;
    Dictionary<int,string[]> liveLists = ViewBag.liveAddressList;
}

<style>
    body {
        margin: 0;
    }

    .myPlayer {
        max-width: 1200px;
        width: 100%;
    }
</style>

@model WebPlatform.Models.Portal_User_Customer

@{
    ViewBag.Title = "Edit";
}

<h2>用户-客户信息映射</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control",@readonly="true" } })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CusID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CusID, new { htmlAttributes = new { @class = "form-control",@readonly="true" } })
                @Html.ValidationMessageFor(model => model.CusID, "", new { @class = "text-danger" })
                @Html.DropDownList("customer_dropdownlist", new SelectList(ViewBag.Customer, "Id", "CusName"))


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaID, new { htmlAttributes = new { @class = "form-control",@readonly="true" } })
                @Html.ValidationMessageFor(model => model.AreaID, "", new { @class = "text-danger" })
                @Html.DropDownList("area_dropdownlist", new SelectList(ViewBag.Area, "Id", "AreaName"))


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StoreID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StoreID, new { htmlAttributes = new { @class = "form-control",@readonly="true" } })
                @Html.ValidationMessageFor(model => model.StoreID, "", new { @class = "text-danger" })
                @Html.DropDownList("store_dropdownlist", new SelectList(ViewBag.Store, "Id", "StoreName"))


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index",new { id = ViewBag.userID})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
